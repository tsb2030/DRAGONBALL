                     <image>
                        <Image url="/eye/game/eyeMovement1/backarrow.png" />
                     </image>
                  </ImageView>
                  <Button mnemonicParsing="false" onAction="#SpeedDown" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #bb4b43; -fx-background-radius: 50;" styleClass="shadow" text="SPEED DOWN" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="50.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#SpeedUp" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #bb4b43; -fx-background-radius: 50;" styleClass="shadow" text="SPEED UP" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="지그재그" textAlignment="CENTER" wrappingWidth="359.75521087646484">
